<Window x:Class="SuperbEdit.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Width="800" Height="500" WindowStyle="ToolWindow" Style="{StaticResource {x:Type Window}}" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="30,0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Label Content="SuperbEdit" VerticalAlignment="Center" FontSize="{DynamicResource {x:Static SystemParameters.CaptionHeightKey}}"/>
            <Label Content="Beta" x:Name="Version" HorizontalAlignment="Center"/>
            <Border BorderThickness="2" BorderBrush="{DynamicResource ForegroundBrush}" >
                <TextBlock x:Name="License" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
