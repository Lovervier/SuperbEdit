<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Converters="clr-namespace:SuperbEdit.Converters" x:Class="SuperbEdit.Views.PanelsView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Converters:PanelPositionToTabStripPlacementConverter x:Key="PanelPositionToTabStripPlacementConverter"/>
    </UserControl.Resources>
    <TabControl x:Name="Items" TabStripPlacement="{Binding PanelPosition, Converter={StaticResource PanelPositionToTabStripPlacementConverter}}" />
</UserControl>
