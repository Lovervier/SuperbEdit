<?xml version="1.0" encoding="utf-8" ?>

<Syntax name="SQL">
	<HighlightWordsRule name="Reserved language words">
		<Words>
			select distinct where and or insert into update
      delete top like in between inner left right join
      union create database not null primary foreign key drop alter
		</Words>
		<IgnoreCase>true</IgnoreCase>
		<Foreground>#0020FF</Foreground>
		<FontWeight>Bold</FontWeight>
		<FontStyle>Normal</FontStyle>
	</HighlightWordsRule>

	<HighlightWordsRule name="Functions">
		<Words>
			avg count first last max min sum group by ucase locase mid
      len round now format
		</Words>
		<IgnoreCase>true</IgnoreCase>
		<Foreground>#0020FF</Foreground>
		<FontWeight>Normal</FontWeight>
		<FontStyle>Normal</FontStyle>
	</HighlightWordsRule>

	<HighlightLineRule name="Comments">
		<LineStart>--</LineStart>
		<IgnoreCase>false</IgnoreCase>
		<Foreground>#009933</Foreground>
		<FontWeight>Normal</FontWeight>
		<FontStyle>Normal</FontStyle>
	</HighlightLineRule>

	<AdvancedHighlightRule name="Numbers">
		<Expression>'[^'\\]*(?:\\.[^'\\]*)*'</Expression>
		<IgnoreCase>false</IgnoreCase>
		<Foreground>#ffa500</Foreground>
		<FontWeight>Normal</FontWeight>
		<FontStyle>Normal</FontStyle>
	</AdvancedHighlightRule>
</Syntax>
